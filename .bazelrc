build --cxxopt="-std=c++20"
build --host_cxxopt="-std=c++20"
build --action_env=BAZEL_CXXOPTS="-std=c++20"

# отключаем серверный режим
startup --batch
startup --host_jvm_args=-Djdk.tls.client.protocols=TLSv1.2

# настройки реестра
common --registry=https://raw.githubusercontent.com/bazelbuild/bazel-central-registry/main/
common --registry=https://registry.bazel.build/

build:clangd --cxxopt="-std=c++20"
build:clangd --host_cxxopt="-std=c++20"
build:clangd --compilation_mode=dbg
build:clangd --copt="-g"
build:clangd --cxxopt="-g"
build:clangd --features=debug_prefix_map_pwd_is_dot